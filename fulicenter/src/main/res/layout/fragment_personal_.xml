<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ucai.cn.fulicenter.fragment.Personal_Fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_orange"
        android:orientation="vertical"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_she"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="设置"
                android:textSize="30dp"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/iv_she"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tb_icon_more_msg_56" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/icon_account"
                android:background="@color/blue"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/iv_avatar"
                android:text="a"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/ivajds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_name"
                android:src="@drawable/tb_icon_home_qrcode_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/collection1">
                <TextView
                    android:id="@+id/collection_of_baby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收藏的宝贝"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            <View
                android:layout_width="3px"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/collection2">
                <TextView
                    android:id="@+id/collection_of_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="收藏的店铺"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
            <View
                android:layout_width="3px"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/collection3">
                <TextView
                    android:id="@+id/collection_of_footprint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的足迹"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/item_personal_iv"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_weight="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/order_list1"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/order_list2"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/order_list3"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/order_list4"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/order_list5"
                android:gravity="center"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/item_personal_ka"
        />
    <include layout="@layout/item_personal_life"/>
    <include layout="@layout/item_personal_intent"/>
    <include layout="@layout/item_personal_hueiyuang"/>

</LinearLayout>
